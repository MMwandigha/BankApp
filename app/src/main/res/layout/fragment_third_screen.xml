<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.onboarding.screens.ThirdScreenFragment">

    <TextView
        android:id="@+id/finish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="28dp"
        android:text="Finish"
        android:textColor="#43C148"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/imgEnjoy"
        android:layout_width="395dp"
        android:layout_height="315dp"
        android:layout_marginTop="90dp"
        android:src="@drawable/mobile_transfer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtEnjoy"
        android:layout_width="312dp"
        android:layout_height="84dp"
        android:layout_marginTop="12dp"
        android:text="Enjoy the convenience of Mobile Transfers"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imgEnjoy" />

    <TextView
        android:id="@+id/descEnjoy"
        android:layout_width="273dp"
        android:layout_height="74dp"
        android:layout_marginTop="8dp"
        android:text="Transact money formany location at the convenience of your location to anyone within the region"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtEnjoy" />
</androidx.constraintlayout.widget.ConstraintLayout>