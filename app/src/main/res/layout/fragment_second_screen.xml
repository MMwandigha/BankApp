<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.onboarding.screens.SecondScreenFragment">

    <TextView
        android:id="@+id/secondscreennext2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="28dp"
        android:text="Next"
        android:textColor="#43C148"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/imgViewBalances"
        android:layout_width="397dp"
        android:layout_height="305dp"
        android:layout_marginTop="90dp"
        android:src="@drawable/send_money"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtViewBalances"
        android:layout_width="283dp"
        android:layout_height="83dp"
        android:layout_marginTop="12dp"
        android:text="View Balances on the Go"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imgViewBalances" />

    <TextView
        android:id="@+id/descViewBalances"
        android:layout_width="256dp"
        android:layout_height="80dp"
        android:layout_marginTop="8dp"
        android:text="View your bank/credit card balances right at the convenienceof your smartphone"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtViewBalances" />
</androidx.constraintlayout.widget.ConstraintLayout>